// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(CLIENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relaciones
  accounts      Account[]
  sessions      Session[]
  properties    Property[] @relation("PropertyOwner")
  favorites     Favorite[]
  creditInquiries CreditInquiry[]
  messages      Message[] @relation("MessageSender")
  receivedMessages Message[] @relation("MessageReceiver")
  propertyInquiries PropertyInquiry[]
  leads         Lead[] @relation("BrokerLeads")

  // Campos específicos para Cliente
  nss           String?
  phone         String?
  address       String?
  birthDate     DateTime?

  // Campos específicos para Bróker
  license       String?
  company       String?
  bio           String?
  specialties   String[]
  experience    Int? // años de experiencia
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Property {
  id          String      @id @default(cuid())
  title       String
  description String      @db.Text
  price       Float
  type        PropertyType
  status      PropertyStatus @default(AVAILABLE)
  
  // Características básicas
  bedrooms    Int
  bathrooms   Int
  area        Float // metros cuadrados
  parking     Int?
  floors      Int?
  age         Int? // años de antigüedad
  
  // Ubicación
  address     String
  city        String
  state       String
  zipCode     String
  latitude    Float?
  longitude   Float?
  
  // Amenidades
  amenities   String[]
  
  // Imágenes
  images      String[]
  
  // Metadatos
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
  
  // Relaciones
  ownerId     String
  owner       User @relation("PropertyOwner", fields: [ownerId], references: [id])
  favorites   Favorite[]
  inquiries   PropertyInquiry[]
  leads       Lead[]
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, propertyId])
}

model CreditInquiry {
  id          String   @id @default(cuid())
  userId      String
  nss         String
  amount      Float?
  points      Int?
  status      InquiryStatus @default(PENDING)
  infonavitResponse Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User @relation(fields: [userId], references: [id])
}

model PropertyInquiry {
  id          String   @id @default(cuid())
  propertyId  String
  clientId    String
  message     String
  phone       String?
  email       String?
  status      InquiryStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  property    Property @relation(fields: [propertyId], references: [id])
  client      User @relation(fields: [clientId], references: [id])
}

model Message {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String
  content     String
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  sender      User @relation("MessageSender", fields: [senderId], references: [id])
  receiver    User @relation("MessageReceiver", fields: [receiverId], references: [id])
}

model Lead {
  id            String      @id @default(cuid())
  name          String
  email         String
  phone         String
  source        LeadSource  @default(WEB_FORM)
  status        LeadStatus  @default(NEW)
  priority      LeadPriority @default(MEDIUM)
  
  // Información de interés
  propertyId    String?
  interestedIn  String?     // Tipo de propiedad que busca
  budget        Float?
  message       String?     @db.Text
  
  // Asignación
  brokerId      String?
  broker        User?       @relation("BrokerLeads", fields: [brokerId], references: [id])
  
  // Seguimiento
  lastContactDate DateTime?
  nextFollowUpDate DateTime?
  notes         String?     @db.Text
  
  // Metadatos
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  convertedAt   DateTime?   // Cuando se convirtió en cliente
  
  property      Property?   @relation(fields: [propertyId], references: [id])
}

enum LeadSource {
  WEB_FORM        // Formulario de contacto
  CHAT            // Chat con el broker
  INFONAVIT_CALC  // Calculadora de Infonavit
  PROPERTY_VIEW   // Visualización de propiedad
  PHONE_CALL      // Llamada telefónica
  EMAIL           // Email directo
  REFERRAL        // Referido
  MANUAL          // Agregado manualmente
}

enum LeadStatus {
  NEW             // Nuevo lead
  CONTACTED       // Contactado
  QUALIFIED       // Calificado
  IN_NEGOTIATION  // En negociación
  WON             // Ganado/Convertido
  LOST            // Perdido
  FOLLOW_UP       // Requiere seguimiento
}

enum LeadPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum UserRole {
  CLIENT
  BROKER
  ADMIN
}

enum PropertyType {
  HOUSE
  APARTMENT
  TOWNHOUSE
  LAND
  COMMERCIAL
  OFFICE
  WAREHOUSE
}

enum PropertyStatus {
  AVAILABLE
  SOLD
  RENTED
  PENDING
  DRAFT
}

enum InquiryStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model ServiceCategory {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  icon        String?
  color       String?
  slug        String    @unique
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  services    Service[]
}

model Service {
  id          String    @id @default(cuid())
  name        String
  description String    @db.Text
  categoryId  String
  category    ServiceCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  // Precios y duración
  basePrice   Float?
  priceRange  String?   // Ej: "Desde $400"
  duration    String?   // Ej: "2-3 horas"
  estimatedHours Float?
  
  // Estado
  isActive    Boolean   @default(true)
  isPopular   Boolean   @default(false)
  
  // Metadatos
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relaciones
  providers   ServiceProvider[] @relation("ProviderServices")
  bookings    ServiceBooking[]
}

model ServiceProvider {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phone       String
  address     String?
  
  // Información profesional
  bio         String?   @db.Text
  specialties String[]  // Servicios que puede realizar
  experience  Int?      // Años de experiencia
  rating      Float?    @default(0)
  totalReviews Int      @default(0)
  
  // Estado
  isActive    Boolean   @default(true)
  isVerified  Boolean   @default(false)
  
  // Disponibilidad
  availability Json?    // Horarios de disponibilidad
  
  // Metadatos
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relaciones
  serviceIds  String[]  // IDs de servicios que puede realizar
  services    Service[] @relation("ProviderServices")
  bookings    ServiceBooking[]
}

model ServiceBooking {
  id          String    @id @default(cuid())
  
  // Cliente
  clientName  String
  clientEmail String
  clientPhone String
  clientAddress String? @db.Text
  
  // Servicio
  serviceId   String
  service     Service @relation(fields: [serviceId], references: [id])
  
  // Proveedor
  providerId  String?
  provider    ServiceProvider? @relation(fields: [providerId], references: [id])
  
  // Detalles de la reserva
  scheduledDate DateTime
  scheduledTime String?  // Hora específica
  notes       String?   @db.Text
  
  // Estado
  status      BookingStatus @default(PENDING)
  
  // Precio
  quotedPrice Float?
  finalPrice  Float?
  
  // Metadatos
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
}

enum BookingStatus {
  PENDING       // Pendiente de confirmación
  CONFIRMED     // Confirmada
  IN_PROGRESS   // En progreso
  COMPLETED     // Completada
  CANCELLED     // Cancelada
  REVIEWED      // Completada y revisada
}
